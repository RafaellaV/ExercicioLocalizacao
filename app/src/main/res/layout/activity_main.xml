<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.edu.iff.pooa20171.exerciciolocalizacao.Activities.MainActivity">

    <TextView
        android:id="@+id/tvOpcao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar por:"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btBusca1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude/Longitude"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvOpcao"/>

    <Button
        android:id="@+id/btBusca2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rua"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvOpcao" />


</android.support.constraint.ConstraintLayout>
